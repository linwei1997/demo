  <!--查询已分配的系统任务-->
  <select id="listDistribute" resultType="java.util.Map">
    SELECT
        a.user_name,
        b.task_type,
        b.task_name,
        c.task_status,
        c.submit_status,
        c.date,
        c.urgency
    FROM
        `user` a,
        task b,
        task_user c
    WHERE
        a.user_id = c.user_id
        AND c.task_id = b.id
        <if test='userName != null and userName != ""'>
          AND a.user_name = #{userName}
        </if>
        <if test='taskType != null and taskType != ""'>
          AND b.task_type = #{taskType}
        </if>
        <if test='date != null and date != ""'>
          AND c.date = #{date}
        </if>
        AND a.enable_flag = '1'
        AND b.enable_flag = '1'
        AND c.enable_flag = '1'
  </select>
